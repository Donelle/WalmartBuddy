<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="@dimen/padding_10dp">

            <ImageButton
                android:id="@+id/new_item_action_close"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentStart="true"
                android:padding="@dimen/padding_5dp"
                android:src="@mipmap/ic_close"
                android:scaleType="centerCrop"
                android:background="@color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/new_item_action_close"
                android:padding="@dimen/padding_5dp"
                android:text="@string/title_activity_new_item"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress_horizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="-7dp"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_horizontal">

        <RelativeLayout
            android:id="@+id/new_item_results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10dp"
            android:background="@color/md_grey_300">

            <android.support.v4.view.ViewPager
                android:id="@+id/new_item_results_pager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/new_item_results_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_item_results_pager"
                android:paddingTop="@dimen/singleline_text_padding_top"
                android:textSize="@dimen/singleline_text_font_size" />

            <IconButton
                android:id="@+id/new_item_results_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/new_item_results_pager"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="-20dp"
                android:text="{fa-arrow-circle-up}"
                android:textSize="24sp"
                android:textColor="@color/dark_button_text_color"
                android:background="@color/transparent"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_item_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin"
            android:background="@color/background_material_light"
            app:layout_behavior="@string/snackbar_behavior">

            <Spinner
                android:id="@+id/new_item_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/new_item_search"
                android:prompt="@string/label_categories"
                android:spinnerMode="dialog"
                android:backgroundTint="?attr/colorPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_item_search_container"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_item_categories"
                android:layout_toStartOf="@+id/new_item_search"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/FloatingTextAppearanceHint">

                <EditText
                    android:id="@+id/new_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Item Name"
                    style="@style/EditTextStyle.FloatingText"/>

            </android.support.design.widget.TextInputLayout>

            <IconButton
                android:id="@+id/new_item_search"
                android:layout_width="@dimen/button_touch_target"
                android:layout_height="@dimen/button_touch_target"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/new_item_categories"
                android:layout_marginTop="20dp"
                android:text="{fa-search}"
                android:textSize="24sp"
                android:textColor="@color/dark_button_text_color"
                style="@style/ButtonStyle.Flat"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_item_price_container"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_item_search_container"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/FloatingTextAppearanceHint">

                <EditText
                    android:id="@+id/new_item_price"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    style="@style/EditTextStyle.FloatingText"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_item_qty_container"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/new_item_search_container"
                android:layout_toEndOf="@+id/new_item_price_container"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/FloatingTextAppearanceHint">

                <EditText
                    android:id="@+id/new_item_qty"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:hint="Qty"
                    android:inputType="number"
                    android:gravity="center_horizontal"
                    style="@style/EditTextStyle.FloatingText"/>

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/new_item_photo"
                android:layout_width="@dimen/cardview_media_size_normal"
                android:layout_height="@dimen/cardview_media_size_normal"
                android:layout_below="@+id/new_item_qty_container"
                android:background="@drawable/imageview_snapshot_background"/>

            <Button
                android:id="@+id/new_item_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:backgroundTint="?attr/colorAccent"
                android:text="Add To Cart"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>