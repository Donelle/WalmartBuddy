<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_5dp"
    android:animateLayoutChanges="true">

    <CheckBox
        android:id="@+id/shopping_list_item_checkedoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/shopping_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/shopping_list_item_checkedoff"
        android:layout_toStartOf="@+id/shopping_list_item_quantity"
        android:layout_marginTop="@dimen/padding_5dp"
        android:gravity="top" />

    <TextView
        android:id="@+id/shopping_list_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_toStartOf="@+id/shopping_list_item_price"
        android:layout_marginEnd="@dimen/padding_15dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/shopping_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </RelativeLayout>
</RelativeLayout>