<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/twoline_list_height"
    android:paddingBottom="@dimen/twoline_list_padding"
    android:animateLayoutChanges="true">

    <CheckBox
        android:id="@+id/shopping_list_item_checkedoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/twoline_list_icon_padding_start"/>

    <TextView
        android:id="@+id/shopping_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twoline_list_text_padding_start"
        android:layout_toStartOf="@+id/shopping_list_item_price"
        android:textSize="@dimen/twoline_list_primary_font_size"/>

    <TextView
        android:id="@+id/shopping_list_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopping_list_item_name"
        android:layout_marginStart="@dimen/twoline_list_text_padding_start"
        android:paddingTop="@dimen/padding_5dp"
        android:textSize="@dimen/twoline_list_secondary_font_size"
        android:textColor="@color/md_grey_500"/>

    <TextView
        android:id="@+id/shopping_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopping_list_item_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/twoline_list_padding"
        android:paddingTop="@dimen/padding_5dp"
        android:textSize="@dimen/twoline_list_secondary_font_size"
        android:textColor="@color/md_grey_500"/>

</RelativeLayout>