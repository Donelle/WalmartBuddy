<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_search_result_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/item_search_result_photo"
            android:paddingTop="@dimen/cardview_title_top_padding"
            android:paddingStart="@dimen/cardview_media_area_right_padding"
            android:paddingEnd="@dimen/padding_10dp"
            android:text="Testing"
            android:textSize="@dimen/cardview_font_size"/>

        <ImageView
            android:id="@+id/item_search_result_photo"
            android:layout_width="@dimen/cardview_media_size_small"
            android:layout_height="@dimen/cardview_media_size_small"
            android:layout_alignParentEnd="true"
            android:paddingTop="@dimen/cardview_media_area_top_padding"
            android:paddingEnd="@dimen/cardview_media_area_right_padding"
            android:paddingStart="0dp"/>

        <TextView
            android:id="@+id/item_search_result_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_search_result_name"
            android:paddingStart="@dimen/cardview_media_area_right_padding"
            android:paddingEnd="0dp"
            android:text="$9.99"
            android:textSize="@dimen/cardview_subtitle_font_size"/>
        
        <Button
            android:id="@+id/item_search_result_select"
            android:layout_width="120dp"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:text="Select Item"
            android:textSize="@dimen/button_font_size"
            android:textColor="?attr/colorAccent"
            style="@style/ButtonStyle.Flat"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>