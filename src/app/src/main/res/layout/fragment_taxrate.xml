<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_content_area">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_zipcode_explanation"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/floating_text_height"
        android:paddingTop="@dimen/floating_text_padding_top"
        android:paddingBottom="@dimen/floating_text_padding_bottom">

        <EditText
            android:id="@+id/taxrate_zipcode"
            android:layout_height="@dimen/text_tile_height"
            android:layout_width="100dp"
            android:inputType="number"
            android:hint="Zip Code" />

    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_container_height"
        android:layout_marginTop="@dimen/dialog_button_container_marginTop"
        android:layout_marginBottom="@dimen/dialog_button_container_marginBottom">

        <Button
            android:id="@+id/taxrate_skip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginEnd="@dimen/dialog_button_padding"
            android:layout_toStartOf="@+id/taxrate_ok"
            android:text="@string/label_taxrate_skip"
            android:textColor="?attr/colorPrimary"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/taxrate_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_alignParentEnd="true"
            android:text="@android:string/ok"
            android:textColor="?attr/colorPrimary"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</LinearLayout>