<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/singleline_list_height"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/singleline_list_padding">

    <TextView
        android:id="@+id/new_item_list_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/new_item_list_icon"
        android:paddingStart="@dimen/padding_5dp"
        android:paddingEnd="0dp"
        android:textSize="@dimen/singleline_list_font_size"
        android:gravity="center_vertical"/>

    <IconTextView
        android:id="@+id/new_item_list_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true"
        android:text="{fa-history}"
        android:textSize="18sp"
        android:textColor="@color/md_grey_400"
        android:gravity="center_vertical|start" />

</RelativeLayout>