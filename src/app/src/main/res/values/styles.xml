<resources>
    <style name="AppTheme" parent="BaseTheme" />

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorBackground">@color/md_grey_100</item>

        <item name="colorAccent">@color/md_orange_a200</item>
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>

        <item name="colorControlNormal">@color/md_blue_500</item>
        <item name="colorControlActivated">@color/md_orange_a200</item>
        <item name="colorButtonNormal">@color/md_blue_500</item>
        <item name="colorControlHighlight">@color/md_orange_a200</item>

        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>

        <item name="android:textColorPrimary">@color/md_grey_900</item>
        <item name="android:textColorSecondary">@color/md_grey_100</item>

        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <item name="android:dialogTheme">@style/BaseDialogTheme</item>
    </style>

    <style name="BaseDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/md_orange_a200</item>
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>

        <item name="colorControlNormal">@color/md_blue_500</item>
        <item name="colorControlActivated">@color/md_orange_a200</item>
        <item name="colorButtonNormal">@color/md_blue_500</item>
        <item name="colorControlHighlight">@color/md_orange_a200</item>

        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>

    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/singleline_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/singleline_text_padding_bottom</item>
        <item name="android:textAppearance">@style/EditTextAppearance</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextStyle.FloatingText">
        <item name="android:paddingTop">@dimen/floating_text_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/floating_text_padding_top_bottom</item>
    </style>

    <style name="EditTextAppearance" parent="android:TextAppearance">
        <item name="android:textColorHint">@color/md_grey_600</item>
        <item name="android:textSize">@dimen/singleline_text_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FloatingTextAppearanceHint" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/floating_text_hint_font_size</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
    </style>

    <style name="ButtonStyle.Flat">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ButtonTextAppearance">
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/md_grey_100</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionButtonOverflowStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/md_grey_100</item>
    </style>
</resources>
